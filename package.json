{
  "name": "power-tasks",
  "description": "Powerful task management for JavaScript",
  "version": "0.0.1",
  "author": "Panates",
  "license": "MIT",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/power-tasks.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "task",
    "job",
    "queue"
  ],
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.mjs",
  "types": "esm/index.d.ts",
  "exports": {
    ".": "./cjs/index.js",
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.mjs"
  },
  "dependencies": {
    "strict-typed-events": "^2.1.0",
    "doublylinked": "^2.5.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-google": "^0.14.0",
    "mocha": "^9.0.1",
    "nyc": "^15.1.0",
    "ts-cleanup": "^0.2.2",
    "ts-gems": "^1.1.0",
    "ts-loader": "^9.0.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.5.2",
    "typescript-esm": "^2.0.0"
  },
  "engines": {
    "node": ">=14.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "bin/",
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "TS_NODE_PROJECT='./test/tsconfig.json' mocha -r ts-node/register --reporter spec test/**/*.spec.ts",
    "cover": "nyc --reporter=cobertura --reporter html --reporter text npm run test",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf cjs esm",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig.build-cjs.json",
    "build:esm": "tsc -b tsconfig.build-esm.json && tsc-esm -p tsconfig.build-esm.json",
    "postbuild": "cp package.cjs.json ./cjs/package.json",
    "compile": "tsc -b tsconfig.json",
    "lint": "eslint --no-error-on-unmatched-pattern",
    "travis-cover": "nyc --reporter lcovonly npm run test"
  },
  "nyc": {
    "temp-dir": "./coverage/.nyc_output"
  }
}
