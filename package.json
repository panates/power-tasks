{
  "name": "power-tasks",
  "description": "Powerful task management for JavaScript",
  "version": "0.5.0",
  "author": "Panates",
  "license": "MIT",
  "contributors": [
    "Eray Hanoglu <e.hanoglu@panates.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/panates/power-tasks.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "task",
    "job",
    "queue"
  ],
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.mjs",
  "types": "esm/index.d.ts",
  "exports": {
    ".": "./cjs/index.js",
    "./cjs": "./cjs/index.js",
    "./esm": "./esm/index.mjs"
  },
  "dependencies": {
    "debug": "^4.3.3",
    "doublylinked": "^2.5.0",
    "strict-typed-events": "^2.1.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^27.5.1",
    "ts-cleanup": "^0.2.4",
    "ts-gems": "^1.5.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2",
    "typescript-esm": "^2.0.0"
  },
  "engines": {
    "node": ">=14.0",
    "npm": ">=7.0.0"
  },
  "files": [
    "cjs/",
    "esm/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "compile": "tsc -b tsconfig.json",
    "lint": "eslint --no-error-on-unmatched-pattern",
    "clean": "npm run clean:src && npm run clean:dist",
    "clean:dist": "rimraf cjs esm coverage",
    "clean:src": "ts-cleanup -s src --all | ts-cleanup -s test",
    "prebuild": "npm run clean:dist && npm run lint",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b tsconfig.build-cjs.json",
    "build:esm": "tsc -b tsconfig.build-esm.json && tsc-esm -p tsconfig.build-esm.json",
    "postbuild": "cp package.cjs.json ./cjs/package.json",
    "test": "jest",
    "precover": "rimraf coverage",
    "cover": "jest --coverage",
    "precitest": "rimraf coverage",
    "citest": "jest --coverage --coverageReporters=lcov"
  }
}
